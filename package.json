{
  "name": "captfencoder",
  "version": "2.0.0",
  "description": "CaptfEncoder 可扩展跨平台网络安全工具套件",
  "main": "./main/index.js",
  "author": "",
  "license": "",
  "scripts": {
    "postinstall": "cd extensions && npm install",
    "start": "electron ."
  },
  "devDependencies": {
    "electron": "^12.0.2"
  },
  "build": {
    "appId": "com.guyoung.captfencoder",
    "productName": "CaptfEncoder",     
    "asar": true,
    "directories": {
      "output": "../release"
    },
    "files": [
      "main/",
      "renderer/"
    ],
    "win": {
      "icon": "icons/app_ico.ico"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "icons/app_ico.icns"
    },
    "linux": {
      "icon": "icons/",
      "maintainer": "guyoung"
    }
  }
}
